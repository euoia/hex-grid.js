{
  // vim: ft=javascript
  // http://www.jshint.com/docs/options/

  // Environment.
  "devel": true, // Remove this for testing prod code.
  "node": true,

  // Generally speaking I enabled all "enforcing options" and left out any
  // "relaxing" options.

  // Enforcing options.
  "bitwise": true,
  "boss": true,
  "browser": true,
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "eqnull": true,
  "forin": true,
  "freeze": true,
  "immed": true,
  "indent": 2,
  "latedef": true,
  "newcap": true,
  "noarg": true,
  "nobsp": true,
  "plusplus": true,

  // Allow functions within a loop.
  "loopfunc": true,

  // Not really possible to enforce quotmark, sometimes mixed is convenient.
  "quotmark": false, // prefer "single"
  "sub": true,
  "undef": true,
  "unused": true,
  "white": false,

  // These ones are opinionated, change if required.
  "maxparams": 4,
  "maxdepth": 4,
  "maxcomplexity": 25,

  "globals": {
	// Mocha globals.
    "describe": false,
    "xdescribe": false,
    "ddescribe": false,
    "it": false,
    "xit": false,
    "iit": false,
    "beforeEach": false,
    "afterEach": false,
    "pending": false,
    "spyOn": false
  }
}
